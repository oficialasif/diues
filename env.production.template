# DIU Esports Community Portal - Production Environment Variables
# Copy this file to .env and update with your actual values for Render deployment

# Application Environment
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-app-name.onrender.com
FRONTEND_URL=https://your-vercel-app.vercel.app

# Database Configuration (PostgreSQL for Render)
DB_DRIVER=pgsql
DB_HOST=your-postgres-host.render.com
DB_NAME=diu_esports
DB_USERNAME=diu_esports_user
DB_PASSWORD=your-secure-password
DB_PORT=5432

# File Storage Configuration
STORAGE_TYPE=local
UPLOAD_PATH=uploads/
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp
MAX_FILE_SIZE=5242880

# AWS S3 Configuration (Optional - for cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_DEFAULT_REGION=us-east-1
# AWS_S3_BUCKET=your-bucket-name

# Cloudinary Configuration (Optional - for image hosting)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Security Settings
SESSION_SECURE=true
SESSION_HTTP_ONLY=true
SESSION_SAME_SITE=Strict

# CORS Settings
CORS_ALLOWED_ORIGINS=https://your-vercel-app.vercel.app,http://localhost:3000

# Logging
LOG_LEVEL=error
LOG_FILE=logs/error.log

# Timezone
TIMEZONE=UTC

# Admin User (will be created during setup)
ADMIN_USERNAME=asifmahmud
ADMIN_EMAIL=asifmahmud@diu.edu.bd
ADMIN_PASSWORD=admin*diuEsports
