# DIU Esports Community Portal - Environment Variables
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost/diuecport/backend/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Database Configuration (for reference - actual config is in backend/config/database.php)
# DB_HOST=localhost
# DB_NAME=diu_esports
# DB_USER=root
# DB_PASS=

# Application Settings
NEXT_PUBLIC_APP_NAME="DIU Esports Community"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_APP_DESCRIPTION="Modern esports community portal for Daffodil International University"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE=5242880
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Security Settings
NEXT_PUBLIC_ENABLE_CSRF_PROTECTION=true
NEXT_PUBLIC_SESSION_TIMEOUT=3600

# Development Settings
NODE_ENV=development
NEXT_PUBLIC_DEBUG_API_CALLS=false
